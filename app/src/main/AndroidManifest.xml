<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.examapp">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/showNotificationBar">
        <activity android:name=".activities.MainActivity"
            android:theme="@style/showNotificationBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.NewApplicantActivity"/>
        <activity android:name=".activities.SelectActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".activities.LoginActivity" />

        <activity android:name=".activities.HomeActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".activities.ForgetPasswordActivity"
            android:label="Forget Password"
            android:theme="@style/AppTheme"/>

        <activity android:name=".activities.ChangePasswordActivity" />
        <activity android:name=".activities.DetailFormActivity">

        </activity>

    </application>

</manifest>